// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt 해시된 비밀번호
  name      String
  role      String   @default("user") // "user" 또는 "admin"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  articles Article[]
  
  @@index([email])
}

model Category {
  id          String   @id @default(cuid())
  name        String   // 카테고리 이름
  slug        String   @unique // URL 친화적 식별자
  description String?  // 카테고리 설명
  parentId    String?  // 부모 카테고리 ID (null이면 최상위)
  order       Int      @default(0) // 정렬 순서
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  parent   Category?  @relation("CategoryTree", fields: [parentId], references: [id], onDelete: Cascade)
  children Category[]  @relation("CategoryTree")
  articles Article[]
  
  @@index([slug])
  @@index([parentId])
}

model Article {
  id        String   @id @default(cuid())
  title     String   @unique
  slug      String   @unique
  content   String
  status    String   @default("published") // "draft", "pending", "published"
  categoryId String? // Category 모델과 연결
  authorId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  author   User?     @relation(fields: [authorId], references: [id], onDelete: SetNull)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  // 이 글을 가리키는 링크들
  incomingLinks ArticleLink[] @relation("ToArticle")
  // 이 글이 다른 글로 가는 링크들
  outgoingLinks ArticleLink[] @relation("FromArticle")
  
  @@index([slug])
  @@index([title])
  @@index([status])
  @@index([authorId])
  @@index([categoryId])
}

model ArticleLink {
  id            String   @id @default(cuid())
  keyword       String   // 어떤 키워드로 연결되었는지
  fromArticleId String
  toArticleId   String
  relationType  String   @default("auto") // 관계 유형: "auto", "parent-child", "related", "reference"
  createdAt     DateTime @default(now())
  
  fromArticle Article @relation("FromArticle", fields: [fromArticleId], references: [id], onDelete: Cascade)
  toArticle   Article @relation("ToArticle", fields: [toArticleId], references: [id], onDelete: Cascade)
  
  @@unique([fromArticleId, toArticleId, keyword])
  @@index([fromArticleId])
  @@index([toArticleId])
  @@index([keyword])
  @@index([relationType])
}
